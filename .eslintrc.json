{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "airbnb"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "operator-linebreak": "off",
    "arrow-parens": "off",
    "implicit-arrow-linebreak": "off",
    "no-plusplus": "off",
    "no-constant-condition": ["error", { "checkLoops": false }],
    "object-curly-newline": "off"
  }
}
